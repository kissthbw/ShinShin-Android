<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.menu.opciones.agregar.NuevaCuentaFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivPaypalTitulo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_paypal_greylight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvPaypalTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gris_obscuro"
            android:fontFamily="@font/font_nunito_black"
            android:textSize="14sp"
            android:text="@string/cuentas_title_paypal"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/ivPaypalTitulo"
            app:layout_constraintTop_toTopOf="@+id/ivPaypalTitulo"
            app:layout_constraintBottom_toBottomOf="@+id/ivPaypalTitulo"/>

        <TextView
            android:id="@+id/tvPaypalTituloNuevo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_black"
            android:textSize="24sp"
            android:textColorHint="@color/gris_obscuro"
            android:text="@string/nuevo_title_cuenta"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPaypalTitulo" />

        <TextView
            android:id="@+id/tvPaypalTituloID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="14sp"
            android:text="@string/nuevo_title_id"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPaypalTituloNuevo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etPaypalID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_light"
            android:textSize="15sp"
            android:background="@drawable/round_corner_gris"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPaypalTituloID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:id="@+id/tvPaypalTituloCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="14sp"
            android:text="@string/nuevo_title_correo"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/etPaypalID"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etPaypalCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_light"
            android:textSize="15sp"
            android:background="@drawable/round_corner_gris"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPaypalTituloCorreo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:id="@+id/tvPaypalTituloNombreCorto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="14sp"
            android:text="@string/nuevo_title_nombre_corto"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/etPaypalCorreo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etPaypalNombreCorto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_light"
            android:textSize="15sp"
            android:background="@drawable/round_corner_gris"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvPaypalTituloNombreCorto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="Autofill,LabelFor" />

        <Button
            android:id="@+id/btnPaypalGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="@string/general_button_guardar"
            android:background="@drawable/round_corner_naranja"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/etPaypalNombreCorto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvPaypalEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_nunito_regular"
            android:textColor="@color/azul"
            android:textSize="15sp"
            android:text="@string/nuevo_msg_eliminar_cuenta"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPaypalGuardar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>