<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/ivPopularesImagen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/img_barrilito"
            android:background="@drawable/round_corner_gris"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvPopularesNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_bold"
            android:textSize="15sp"
            android:text="Paq 2 aguas Bonafont"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivPopularesImagen"
            app:layout_constraintEnd_toStartOf="@+id/tvPopularesCantidad"/>

        <TextView
            android:id="@+id/tvPopularesCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_regular"
            android:textSize="12sp"
            android:text="500ml"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPopularesNombre"
            app:layout_constraintEnd_toStartOf="@+id/tvPopularesPrecio"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/azul"
            android:fontFamily="@font/font_nunito_semibold"
            android:textSize="13sp"
            android:text="@string/main_button_info"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/ivPopularesImagen"
            app:layout_constraintEnd_toStartOf="@+id/tvPopularesPrecio"
            app:layout_constraintTop_toBottomOf="@+id/tvPopularesNombre"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvPopularesPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_nunito_black"
            android:textSize="18sp"
            android:text="$5"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/round_corner_naranja"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>