<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.menu.opciones.CuentasFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCuentasTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:fontFamily="@font/font_nunito_black"
                android:textSize="26sp"
                android:text="@string/cuentas_title"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/ivCuentasBancarias"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_bancaria_grey"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tvCuentasTitulo"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvCuentasTituloBancarias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:fontFamily="@font/font_nunito_black"
                android:textSize="15sp"
                android:text="@string/cuentas_title_bancaria"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@+id/ivCuentasBancarias"
                app:layout_constraintBottom_toBottomOf="@+id/ivCuentasBancarias"
                app:layout_constraintStart_toEndOf="@+id/ivCuentasBancarias"/>

            <TextView
                android:id="@+id/tvCuentasBancaria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/azul"
                android:fontFamily="@font/font_nunito_semibold"
                android:textSize="15sp"
                android:text="@string/cuentas_button_cuenta"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCuentasTituloBancarias"
                app:layout_constraintBottom_toBottomOf="@+id/tvCuentasTituloBancarias"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCuentasBancaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvCuentasTituloBancarias"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/ivCuentasPaypal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_paypal_grey"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/rvCuentasBancaria"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvCuentasTituloPaypal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:fontFamily="@font/font_nunito_black"
                android:textSize="15sp"
                android:text="@string/cuentas_title_paypal"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@+id/ivCuentasPaypal"
                app:layout_constraintBottom_toBottomOf="@+id/ivCuentasPaypal"
                app:layout_constraintStart_toEndOf="@+id/ivCuentasPaypal"/>

            <TextView
                android:id="@+id/tvCuentasPaypal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/azul"
                android:fontFamily="@font/font_nunito_semibold"
                android:textSize="15sp"
                android:text="@string/cuentas_button_cuenta"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCuentasTituloPaypal"
                app:layout_constraintBottom_toBottomOf="@+id/tvCuentasTituloPaypal"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCuentasPaypal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvCuentasPaypal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/ivCuentasRecarga"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_movil_grey"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/rvCuentasPaypal"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvCuentasTituloRecarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:fontFamily="@font/font_nunito_black"
                android:textSize="15sp"
                android:text="@string/cuentas_title_recarga"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="@+id/ivCuentasRecarga"
                app:layout_constraintBottom_toBottomOf="@+id/ivCuentasRecarga"
                app:layout_constraintStart_toEndOf="@+id/ivCuentasRecarga"/>

            <TextView
                android:id="@+id/tvCuentasRecarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/azul"
                android:fontFamily="@font/font_nunito_semibold"
                android:textSize="15sp"
                android:text="@string/cuentas_button_numero"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvCuentasTituloRecarga"
                app:layout_constraintBottom_toBottomOf="@+id/tvCuentasTituloRecarga"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCuentasRecarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@+id/tvCuentasRecarga"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>