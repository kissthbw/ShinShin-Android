<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/naranja</item>
        <item name="colorAccent">@color/naranja</item>
    </style>

    <style name="nunito_titulo">
        <item name="android:fontFamily">@font/font_nunito_black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="nunito_subtitulo">
        <item name="android:fontFamily">@font/font_nunito_black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="nunito_texto">
        <item name="android:fontFamily">@font/font_nunito_light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="nunito_table_header">
        <item name="android:fontFamily">@font/font_nunito_black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="nunito_table_cell">
        <item name="android:fontFamily">@font/font_nunito_light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
