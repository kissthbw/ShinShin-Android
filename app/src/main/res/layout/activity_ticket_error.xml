<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".main.ocr.TicketErrorActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/ivTicketErrorImagen"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/img_ticketrepetido"
            android:scaleType="centerCrop"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvTicketErrorTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_nunito_black"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:text="@string/ticketerror_title"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/ivTicketErrorImagen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvTicketErrorSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_nunito_light"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:text="@string/ticketerror_mensaje"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTicketErrorTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btnTicketErrorVolver"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_naranja"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="@string/ticketerror_btn"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTicketErrorSubtitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>