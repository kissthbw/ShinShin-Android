<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".terminos.TerminosActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvTerminosTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:fontFamily="@font/font_nunito_black"
                android:textSize="32sp"
                android:text="@string/terminos_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvTerminosSubtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:fontFamily="@font/font_nunito_light"
                android:textSize="19sp"
                android:text="@string/terminos_subtitle"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTerminosTitulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvTerminosSubtituloDos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:fontFamily="@font/font_nunito_black"
                android:textSize="16sp"
                android:text="@string/terminos_subtitle_dos"
                android:layout_marginTop="27dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTerminosSubtitulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvTerminosTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:fontFamily="@font/font_nunito_light"
                android:textSize="16sp"
                android:text="@string/terminos_texto"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTerminosSubtituloDos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>