<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.menu.opciones.ContactoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clContactoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tvContactoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_black"
            android:textSize="26sp"
            android:text="@string/contacto_title"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvContactoTituloAyudarte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:text="@string/contacto_title_ayudarte"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tvContactoTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etAyudaAyudarte"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_gris"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_light"
            android:textSize="16sp"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvContactoTituloAyudarte"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="Autofill,LabelFor"/>

        <TextView
            android:id="@+id/tvContactoTituloCuentanos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:text="@string/contacto_title_cuentanos"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/etAyudaAyudarte"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etAyudaCuentanos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_gris"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_light"
            android:textSize="16sp"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvContactoTituloCuentanos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="Autofill,LabelFor"/>

        <Button
            android:id="@+id/btnAyudaEnviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_naranja"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="@string/general_button_enviar"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/etAyudaCuentanos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>