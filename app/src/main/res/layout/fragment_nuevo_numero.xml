<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.menu.opciones.agregar.NuevoNumeroFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivNumeroTitulo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_movil_greylight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvNumeroTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gris_obscuro"
            android:fontFamily="@font/font_nunito_black"
            android:textSize="14sp"
            android:text="@string/cuentas_title_recarga"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/ivNumeroTitulo"
            app:layout_constraintTop_toTopOf="@+id/ivNumeroTitulo"
            app:layout_constraintBottom_toBottomOf="@+id/ivNumeroTitulo"/>

        <TextView
            android:id="@+id/tvNumeroTituloNuevo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_black"
            android:textSize="24sp"
            android:textColorHint="@color/gris_obscuro"
            android:text="@string/nuevo_title_numero"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNumeroTitulo" />

        <TextView
            android:id="@+id/tvNumeroTituloCompania"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="14sp"
            android:text="@string/nuevo_title_compania"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNumeroTituloNuevo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Spinner
            android:id="@+id/sNumeroCompania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_light"
            android:textSize="15sp"
            android:background="@drawable/round_corner_gris"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNumeroTituloCompania"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvNumeroTituloTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="14sp"
            android:text="@string/crear_title_telefono"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sNumeroCompania"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etNumeroTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_light"
            android:textSize="15sp"
            android:background="@drawable/round_corner_gris"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNumeroTituloTelefono"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:id="@+id/tvNumeroTituloConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="14sp"
            android:text="@string/crear_title_confirmar"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/etNumeroTelefono"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etNumeroConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_light"
            android:textSize="15sp"
            android:background="@drawable/round_corner_gris"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNumeroTituloConfirmar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:id="@+id/tvNumeroTituloNombreCorto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="14sp"
            android:text="@string/nuevo_title_nombre_corto"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/etNumeroConfirmar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etNumeroNombreCorto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:fontFamily="@font/font_nunito_light"
            android:textSize="15sp"
            android:background="@drawable/round_corner_gris"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNumeroTituloNombreCorto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="Autofill,LabelFor" />

        <Button
            android:id="@+id/btnNumeroGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:fontFamily="@font/font_nunito_extrabold"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:text="@string/general_button_guardar"
            android:background="@drawable/round_corner_naranja"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/etNumeroNombreCorto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvNumeroEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_nunito_regular"
            android:textColor="@color/azul"
            android:textSize="15sp"
            android:text="@string/nuevo_msg_eliminar_numero"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnNumeroGuardar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>